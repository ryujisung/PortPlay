<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PortPlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textViewStyle">@style/pretendardTextView</item>

        <item name="android:buttonStyle">@style/pretendardButton</item>



    </style>



    <style name="pretendardTextView" parent="android:Widget.TextView">

        <item name="android:fontFamily">@font/pretendard_medium</item>

    </style>



    <style name="pretendardButton" parent="android:Widget.Button">

        <item name="android:fontFamily">@font/pretendard_medium</item>

    </style>
</resources>